<%= simple_form_for @group do |f| %>
  <div class="form-group">
    <%= f.input :movie, input_html: { class: "form-control"} %>
    <%= f.input :review, input_html: { class: "form-control"} %>
  </div>
  <%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submiting..." } %>
<% end %>
